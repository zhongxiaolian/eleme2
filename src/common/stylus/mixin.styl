// 定义全局的混入
px2rem(n)
    return unit(n/(750/10), rem)

border-1px($color)
    position relative 
    &::after
        display block
        position absolute
        left 0
        bottom 0
        width 100%
        height 0
        border-bottom 1px solid $color
        content ''
        @media (-webkit-min-device-pixel-ratio: 2),(min-device-pixel-ratio: 2)
            -webkit-transform scaleY(0.5)
            transform scaleY(0.5)
        @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
            -webkit-transform scaleY(0.3)
            transform scaleY(0.3)    

border-none()
    &::after
        display none

border-1px-gradient($color)
    background-image: -webkit-linear-gradient(top,transparent,$color);
    background-image: -moz-linear-gradient(top,transparent,$color);
    background-image: -o-linear-gradient(top,transparent,$color);
    background-image: linear-gradient(to bottom,transparent,$color);
    background-size: 100% 1px
    background-repeat no-repeat
    background-position left bottom 
    // @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    //     background-image: -webkit-linear-gradient(top,transparent,transparent,$color);
    //     background-image: -moz-linear-gradient(top,transparent,transparent,$color);
    //     background-image: -o-linear-gradient(top,transparent,transparent,$color);
    //     background-image: linear-gradient(to bottom,transparent,transparent,$color);

border-1px-gradient-none()
    background none

bg-image($url)
    background-image url($url+'@2x.png')
    background-repeat no-repeat
    background-size contain
    @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
        background-image url($url+'@3x.png')